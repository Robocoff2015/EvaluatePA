        #mdiv {
            width: 18px;
            height: 18px;
            /*            background-color: red;*/
            border: 0px solid black;
        }

        .mdiv {
            height: 18px;
            width: 3px;
            margin-left: 7px;
            background-color: red;
            transform: rotate(45deg);
            Z-index: 1;
        }

        .md {
            height: 18px;
            width: 3px;
            background-color: red;
            transform: rotate(90deg);
            Z-index: 2;
        }
        .loader-wrapper {
            width: 100%;
            height: 100%;
            position: absolute;
            top: 0;
            left: 0;
            background-color: #242f3f;
            display: flex;
            justify-content: center;
            align-items: center;
            opacity:0.8;
        }
        .loader {
  display: inline-block;
  width: 30px;
  height: 30px;
  position: relative;
  border: 4px solid #Fff;
  animation: loader 2s infinite ease;
}
.loader-inner {
  vertical-align: top;
  display: inline-block;
  width: 100%;
  background-color: #fff;
  animation: loader-inner 2s infinite ease-in;
}
@@keyframes loader {
        0% {
            transform: rotate(0deg);
            border: 4px solid #fa3104;
        }
        25% {
            transform: rotate(180deg);
            border: 4px solid #f8b805;
        }
        50% {
            transform: rotate(180deg);
            border: 4px solid #51f505;
        }
        75% {
            transform: rotate(360deg);
            border: 4px solid #0679f6;
        }
        100% {
            transform: rotate(360deg);
            border: 4px solid #f8081e;
        }
}
@@keyframes loader-inner {
  0% { height: 0%;
       background-color:#fa3104;

  }
        25% {
            height: 0%;
            background-color: #f8b805;
        }
        50% {
            height: 100%;
            background-color: #51f505;
        }
        75% {
            height: 100%;
            background-color: #0679f6;
        }
        100% {
            height: 0%;
            background-color: #f8081e;
        }
}
    </style>
}

